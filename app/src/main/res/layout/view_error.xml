<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/error_view_padding"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/error_content"
        android:layout_marginBottom="16dp"
        android:textColor="@color/background_dark"
        tools:text="Error has occurred. Please try again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/error_retry_button"
        android:text="@string/retry_button"
        android:background="@drawable/retry_button_selector"
        android:layout_width="@dimen/retry_button_width"
        android:layout_height="@dimen/retry_button_height"/>

</LinearLayout>